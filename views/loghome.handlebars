<header class="blog-page">
  <h1><a href="/home">Tech Blog</a></h1>
  <nav>
    <ul>
      <li><a href="/dash">Dashboard</a></li>
      
      <li><a href="/logout">Log Out</a></li>
      
    </ul>
  </nav>
</header>
  
<main class="container home">
<section class="posts">
  <h2>Welcome to the Tech Blog Homepage, {{user.username}}</h2>
  {{#each posts}}
    <article class="home-post">
      <h3>{{post.title}}</h3>
      <p>{{post.content}}</p>
      <a href="/post/{{id}}">Read more</a>
    </article>
  {{/each}}
</section>
</main>

<footer class="blog-page">
  <p>&copy; 2023 Tech Blog</p>
</footer>
